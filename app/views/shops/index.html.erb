<h1>お店リスト</h1>

<div align="center">
	<table width="600">
	  <tr>
	    <th>Name</th>
	    <th>Url</th>
	    <th>Address</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @shops.each do |shop| %>
	  <tr>
	    <td><%= shop.name %></td>
	    <td><%= shop.url %></td>
	    <td><%= shop.address %></td>
	    <td><%= link_to 'Show', shop %></td>
	    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
	    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

