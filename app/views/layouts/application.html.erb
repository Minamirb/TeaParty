<!DOCTYPE html>
<html>
	
<head>
	<meta content="text/html;charset=UTF-8" http-equiv="content-type" />
  <title>Minami.rb cafe diary</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body>
	<div id="top">
		<br>
		<%= image_tag('/images/minamirbcafediary.gif', :height => '80px') %>
	</div>
	
	<div id="side">
		<div id="toplink">
			<%= link_to image_tag('/images/p02.gif'), root_menu_path %>
			<%= link_to 'Top Page', root_menu_path %>
		</div>
		
		<div id="menu1" align="center">
			<br>
			<br>
			<td><%= Date.today %></td>
			<table cellspacing="0" >
			<tr>
			  <% ["日", "月", "火", "水", "木", "金", "土"].each do |wday| %>
			    <td><%= wday%></td>
			  <% end %>
			</tr>
			<tr>
			  <td></td> <td>1</td> <td>2</td> <td>3</td> <td>4</td> <td>5</td> <td>6</td>
			</tr>
			<tr>
			  <td>7</td> <td>8</td> <td>9</td> <td>10</td> <td>11</td> <td>12</td> <td>13</td>
			</tr>
			<tr>
			  <td>14</td> <td>15</td> <td>16</td> <td>17</td> <td>18</td> <td>19</td> <td>20</td>
			</tr>
			<tr>
			  <td>21</td> <td>22</td> <td>23</td> <td>24</td> <td>25</td> <td>26</td> <td>27</td>
			</tr>
			<tr>
			  <td>28</td> <td>29</td> <td>30</td> <td></td> <td></td> <td></td> <td></td>
			</tr>
			</table>
		</div>

		<div id="menu2">
			最近追加された日記
		</div>

		<div id="menu3">
			管理用メニュー<br>
			<%= link_to_unless_current 'お店の編集', shops_path %><br>
			<%= link_to_unless_current 'スケジュールの編集', schedules_path %><br>
			<%= link_to_unless_current 'ユーザー登録', users_path %><br>
		</div>
	</div>

	<div id="main">
		<%= yield %>
	</div>

</body>
</html>
